{
  "name": "btc-converter-cli",
  "version": "1.0.0",
  "description": "A CLI to convert Bitcoin to any other currency",
  "main": "lib/index.js",
  "scripts": {
    "clear": "rimraf bin",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir bin src",
    "build:watch": "npm run build -- --watch",
    "build:umd": "./node_modules/.bin/webpack --output-filename btc-converter-cli.umd.js",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename btc-converter-cli.umd.min.js -p",
    "build:all": "npm run build && npm run build:umd && npm run build:umd:min",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --reporter nyan",
    "test:tdd": "npm run test -- --watch",
    "test:coverage": "nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls",
    "prepublish": "npm run build:all"
  },
  "preferGlobal": true,
  "bin": {
    "btc-converter-cli": "bin/main.js"
  },
  "files": [
    "dist",
    "lib"
  ],
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabriel-hahn/btc-converter-cli.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library",
    "cli"
  ],
  "author": "Gabriel Hahn Schaeffer <gabriel_hahn@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabriel-hahn/btc-converter-cli/issues"
  },
  "homepage": "https://github.com/gabriel-hahn/btc-converter-cli#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "chai": "3.5.0",
    "coveralls": "^2.13.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "husky": "0.11.9",
    "mocha": "^3.2.0",
    "node-fetch": "^1.6.3",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1",
    "sinon": "2.1.0",
    "sinon-chai": "^3.2.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^2.4.1"
  }
}
